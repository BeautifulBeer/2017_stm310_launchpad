#ifndef CONFIG_BLUETOOTH_H_
#define CONFIG_BLUETOOTH_H_


#include <misc.h>
#include <stm32f10x.h>
#include <stm32f10x_exti.h>
#include <stm32f10x_gpio.h>
#include <stm32f10x_rcc.h>
#include <stm32f10x_usart.h>
#include "config_bluetooth.c"

/*
 *
 * This code implements bluetooth data transmission with android
 *
 * USART3(PC10 - TX, PC11 - RX), USART2(PA2 - TX, PA3 - RX) is used
 *
 */

//time unit : ms second
void delay(int timer);
void m_Init_USART3();
void m_Init_USART2();
void m_Init_USART3_GPIOC();
void m_Init_USART2_GPIOA();
void m_Init_USART3_Interrupt();
void m_Init_USART2_NVIC();
void m_Init_USART3_NVIC();
void m_Init_USART2_EXIT();
void m_Init_USART3_EXIT();




#endif /* CONFIG_BLUETOOTH_H_ */
